html { 
    height: 100%; 
}
body { 
    height: 100%; 
    margin: 0px; 
    padding: 0px 
}
#map_canvas { 
    height: 100%; 
    width: 100%; 
    z-index: 1;
}
#shell {  
    width: 100%;
    position: fixed; 
    bottom: 0px; 
    z-index: 2;
    visibility: hidden;
}
#shell input {
    width: 100%;
    border-style: none;
    background-color: #222;
    color: white;
    font-family: monospace;    
    bottom: 0px;
}
#shell_info {  
    font-family: monospace;    
    background-color: #333;
    color: white;
    width: 100%;
    height: 60px;
    position: fixed;
    bottom: 20px; 
    z-index: 2;   
}

/* css for timepicker */
.ui-timepicker-div .ui-widget-header{ margin-bottom: 10px; }
.ui-timepicker-div dl{ text-align: left; }
.ui-timepicker-div dl dt{ height: 25px; margin-bottom: -25px; }
.ui-timepicker-div dl dd{ margin: -25px 0 10px 65px; }
.ui-timepicker-div td { font-size: 80%; }
.ui-tpicker-grid-label { border: none; margin: 0; padding: 0; }